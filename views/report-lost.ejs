<%- include('partials/header') %>
<%- include('partials/navbar') %>

<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6 md:p-8">
        <div class="text-center mb-8">
            <h1 class="text-3xl font-display font-bold text-gray-900 mb-2">Report Lost Item</h1>
            <p class="text-gray-600">Help us find your lost item by providing detailed information</p>
        </div>

        <form action="/report-lost" method="POST" enctype="multipart/form-data" class="space-y-6">
            <div>
                <label for="item-photo" class="block text-sm font-medium text-gray-700 mb-2">Item Photo</label>
                <input type="file" id="item-photo" name="item-photo" class="w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-md file:border-0 file:text-sm file:font-semibold file:bg-primary-50 file:text-primary-700 hover:file:bg-primary-100">
            </div>

            <div class="grid md:grid-cols-2 gap-6">
                <div>
                    <label for="itemName" class="block text-sm font-medium text-gray-700 mb-2">Item Name *</label>
                    <input type="text" id="itemName" name="itemName" required class="w-full px-3 py-2 border border-gray-300 rounded-md" placeholder="e.g., iPhone 13, Blue Wallet">
                </div>
                <div>
                    <label for="category" class="block text-sm font-medium text-gray-700 mb-2">Category *</label>
                    <select id="category" name="category" required class="w-full px-3 py-2 border border-gray-300 rounded-md">
                        <option value="">Select category</option>
                        <option value="electronics">Electronics</option>
                        <option value="clothing">Clothing</option>
                        <option value="accessories">Accessories</option>
                        <option value="documents">Documents</option>
                        <option value="keys">Keys</option>
                        <option value="jewelry">Jewelry</option>
                        <option value="bags">Bags</option>
                        <option value="other">Other</option>
                    </select>
                </div>
            </div>

            <div>
                <label for="description" class="block text-sm font-medium text-gray-700 mb-2">Description *</label>
                <textarea id="description" name="description" required rows="4" class="w-full px-3 py-2 border border-gray-300 rounded-md" placeholder="Describe your item in detail (color, brand, size, distinctive features, etc.)"></textarea>
            </div>

            <div class="grid md:grid-cols-2 gap-6">
                <div>
                    <label for="lostLocation" class="block text-sm font-medium text-gray-700 mb-2">Where did you lost it? *</label>
                    <select id="lostLocation" name="lostLocation" required class="w-full px-3 py-2 border border-gray-300 rounded-md">
                        <option value="">Select location</option>
                        <option value="BSH-Department">BSH-Department</option>
                        <option value="CIVIL-Department">CIVIL-Department</option>
                        <option value="BIOTECH-Department">BIOTECH-Department</option>
                        <option value="ENTC-Department">ENTC-Department</option>
                        <option value="Ground">Ground</option>
                        <option value="Library">Library</option>
                        <option value="AIML-building">AIML-building</option>
                        <option value="South-enclave">South-enclave</option>
                        <option value="North-enclave">North-enclave</option>
                        <option value="boys-hostel">boys-hostel</option>
                        <option value="Girls-hostel">Girls-hostel</option>
                        <option value="MBA-building">MBA-building</option>
                        <option value="other">other</option>
                    </select> 
                </div>                  
                <div>
                    <label for="lostDate" class="block text-sm font-medium text-gray-700 mb-2">When did you lose it? *</label>
                    <input type="date" id="lostDate" name="lostDate" required class="w-full px-3 py-2 border border-gray-300 rounded-md">
                </div>
            </div>

            <div class="flex justify-end space-x-4">
                <a href="/" class="px-6 py-2 border border-gray-300 rounded-md  text-gray-700 hover:bg-red-400">Cancel</a>
                <button type="submit" class="px-6 py-2 bg-green-600 text-white rounded-md hover:bg-green-800">Submit Report</button>
            </div>
        </form>
    </div>
</div>

<%- include('partials/footer') %>