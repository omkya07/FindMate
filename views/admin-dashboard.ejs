<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Admin Dashboard - FindMate</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" href="/stylesheets/style.css">
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Poppins:wght@600;700&display=swap" rel="stylesheet">
</head>
<body class="bg-gray-100 font-sans">
  <div class="flex h-screen">
    <aside class="bg-gray-800 text-white w-64 flex-shrink-0 flex flex-col">
      <div class="p-4">
        <h1 class="text-xl font-display font-bold">FindMate Admin</h1>
      </div>
      <nav class="mt-8 flex-1">
        <a href="#users" class="nav-item flex items-center px-4 py-2 text-sm font-medium text-gray-300 hover:text-blue-700 ">Users</a>
        <a href="/view-lost" class="text-gray-300 hover:text-blue-700 block px-4 py-2 rounded-md text-sm font-medium">Lost Items</a>
        <a href="/view-found" class="text-gray-300 hover:text-blue-700 block px-4 py-2 rounded-md text-sm font-medium">Found Items</a>
        <a href="#lost-items" class="nav-item flex items-center px-4 py-2 text-sm font-medium text-gray-300 hover:text-blue-700 ">Manage Lost Items</a>
        <a href="#found-items" class="nav-item flex items-center px-4 py-2 text-sm font-medium text-gray-300 hover:text-blue-700 ">Manage Found Items</a>
        
      </nav>
      <div class="p-4 border-t border-gray-700">
        <a href="/logout" class="text-sm text-gray-400 hover:text-white">Sign out</a>
      </div>
    </aside>

    <div class="flex-1 flex flex-col overflow-hidden">
      <main class="flex-1 overflow-y-auto p-6">
        
        <% if(success && success.length) { %>
            <div class="bg-green-100 border-l-4 border-green-500 text-green-700 p-4 mb-4" role="alert">
                <p><%= success %></p>
            </div>
        <% } %>
        <% if(error && error.length) { %>
            <div class="bg-red-100 border-l-4 border-red-500 text-red-700 p-4 mb-4" role="alert">
                <p><%= error %></p>
            </div>
        <% } %>
    
        <section id="users" class="content-section">
          <h2 class="text-2xl font-bold mb-4">All Users (<%= users.length %>)</h2>
          <div class="bg-white shadow rounded-lg overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
              <thead class="bg-gray-50">
                <tr>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Name</th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Email</th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Role</th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Contact Number</th>
                </tr>
              </thead>
              <tbody class="bg-white divide-y divide-gray-200">
                <% users.forEach(user => { %>
                  <tr>
                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900"><%= user.fullName %></td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= user.email %></td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= user.role %></td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= user.phone %></td>
                  </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
        </section>

        <section id="lost-items" class="content-section hidden">
          <h2 class="text-2xl font-bold mb-4">Lost Item Reports (<%= lostItems.length %>)</h2>
          <div class="bg-white shadow rounded-lg overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
              <thead class="bg-gray-50">
                <tr>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Item Name</th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Reported By</th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Location</th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Lost Date</th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Actions</th>
                </tr>
              </thead>
              <tbody class="bg-white divide-y divide-gray-200">
                <% lostItems.forEach(item => { %>
                  <tr>
                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900"><%= item.itemName %></td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= item.user ? item.user.email : 'N/A' %></td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= item.lostLocation %></td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= item.lostDate ? new Date(item.lostDate).toLocaleDateString() : 'N/A' %></td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                      <form action="/admin/lostitems/<%= item._id %>/delete" method="POST" onsubmit="return confirm('Are you sure you want to delete this report?');">
                        <button type="submit" class="text-red-600 hover:text-red-900">Delete</button>
                      </form>
                    </td>
                  </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
        </section>

        <section id="found-items" class="content-section hidden">
          <h2 class="text-2xl font-bold mb-4">Found Item Reports (<%= foundItems.length %>)</h2>
           <div class="bg-white shadow rounded-lg overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
              <thead class="bg-gray-50">
                <tr>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Item Name</th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Reported By</th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Location</th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Found Date</th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Actions</th>
                </tr>
              </thead>
              <tbody class="bg-white divide-y divide-gray-200">
                <% foundItems.forEach(item => { %>
                  <tr>
                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900"><%= item.itemName %></td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= item.finder ? item.finder.email : 'N/A' %></td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= item.foundLocation %></td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= item.foundDate ? new Date(item.foundDate).toLocaleDateString() : 'N/A' %></td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                       <form action="/admin/founditems/<%= item._id %>/delete" method="POST" onsubmit="return confirm('Are you sure you want to delete this report?');">
                        <button type="submit" class="text-red-600 hover:text-red-900">Delete</button>
                      </form>
                    </td>
                  </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
        </section>
      </main>
    </div>
  </div>

  <script>
    const navItems = document.querySelectorAll('.nav-item');
    const contentSections = document.querySelectorAll('.content-section');
    function showSection(hash) {
      contentSections.forEach(section => {
        section.classList.toggle('hidden', '#' + section.id !== hash);
      });
    }
    navItems.forEach(item => {
      item.addEventListener('click', (e) => {
        e.preventDefault();
        const hash = e.target.hash;
        window.location.hash = hash;
        showSection(hash);
      });
    });
    const initialHash = window.location.hash || '#users';
    showSection(initialHash);
  </script>
</body>
</html>