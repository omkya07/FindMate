<%- include('partials/header') %>
<%- include('partials/navbar') %>

<main class="flex-grow bg-gradient-to-r from-blue-50 to-indigo-100 py-12">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="bg-white rounded-2xl shadow-lg overflow-hidden">
      
      <!-- Header -->
      <div class="bg-gradient-to-r from-indigo-500 to-blue-500 p-6">
        <h1 class="text-3xl font-bold text-white">My Profile</h1>
        <p class="mt-1 text-sm text-indigo-100">Manage your account information and settings.</p>
      </div>

      <!-- Profile Content -->
      <div class="p-6 flex flex-col sm:flex-row items-center gap-6">
        
        <!-- Avatar -->
        <div class="flex-shrink-0">
          <div class="h-28 w-28 rounded-full bg-gradient-to-r from-indigo-400 to-blue-400 flex items-center justify-center text-4xl font-bold text-white shadow-md">
            <% if (currentUser.fullName) { %>
              <%= currentUser.fullName.split(' ').map(n => n[0]).join('').toUpperCase() %>
            <% } else { %> U <% } %>
          </div>
        </div>

        <!-- Info Section -->
        <div class="flex-grow space-y-4">
          <div>
            <label class="flex items-center text-sm font-medium text-gray-500">
              <i class="fas fa-user mr-2 text-indigo-500"></i> Full Name
            </label>
            <p class="text-lg font-semibold text-gray-900"><%= currentUser.fullName %></p>
          </div>
          <div>
            <label class="flex items-center text-sm font-medium text-gray-500">
              <i class="fas fa-envelope mr-2 text-indigo-500"></i> Email Address
            </label>
            <p class="text-lg text-gray-900"><%= currentUser.email %></p>
          </div>
          <div>
            <label class="flex items-center text-sm font-medium text-gray-500">
              <i class="fas fa-phone mr-2 text-indigo-500"></i> Phone Number
            </label>
            <p class="text-lg text-gray-900"><%= currentUser.phone || 'Not provided' %></p>
          </div>
          <div>
            <label class="flex items-center text-sm font-medium text-gray-500">
              <i class="fas fa-calendar-alt mr-2 text-indigo-500"></i> Member Since
            </label>
            <p class="text-lg text-gray-900"><%= currentUser.createdAt.toDateString() %></p>
          </div>
        </div>
      </div>

      <!-- Action Buttons -->
      <div class="p-6 bg-gray-50 border-t border-gray-200 flex justify-end space-x-4">
        <a href="/forgot-password" class="bg-indigo-500 text-white px-5 py-2 rounded-lg font-medium hover:bg-indigo-600 transition">Change Password</a>
        <a href="/logout" class="bg-red-500 text-white px-5 py-2 rounded-lg font-medium hover:bg-red-600 transition">Logout</a>
      </div>
    </div>
  </div>
</main>

<%- include('partials/footer') %>
